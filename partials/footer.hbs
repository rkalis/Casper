{{!-- The footer at the very bottom of the screen --}}
<footer class="site-footer outer">
    <div class="site-footer-content inner">
        <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
        <nav class="site-footer-nav">
            <a href="{{@blog.url}}">Latest Posts</a>
            <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">RSS</a>
            {{#if @blog.facebook}}<a href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">Facebook</a>{{/if}}
            {{#if @blog.twitter}}<a href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">Twitter</a>{{/if}}
        </nav>
    </div>
</footer>

{{#contentFor "scripts"}}
<script>
    (function() {
        if (typeof socialMedia !== 'undefined') {
            if (typeof socialMedia.github !== 'undefined') {
                $('.site-footer-nav').append(`<a href="${socialMedia.github}" title="GitHub" target="_blank" rel="noopener">GitHub</a>`);
            }
            if (typeof socialMedia.linkedin !== 'undefined') {
                $('.site-footer-nav').append(`<a href="${socialMedia.linkedin}" title="LinkedIn" target="_blank" rel="noopener">LinkedIn</a>`);
            }
        }
    })();
</script>
{{/contentFor}}
